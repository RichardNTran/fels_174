<% provide :title, @user.name %>
<%= content_for :view_specific_css do  %>
  <%= stylesheet_link_tag "application", "user","static_page" %>
<% end %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
        <%= image_tag @user.avatar.url if @user.avatar? %>
      </h1>
    </section>
  </aside>
</div>
