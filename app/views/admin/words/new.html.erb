<%= provide :title, t("admin.words.title") %>
<%= content_for :view_specific_css do  %>
  <%= stylesheet_link_tag "application", "static_page" %>
<% end %>
<div class="row">
  <div class="col-lg-12 padding-twenty">
    <div class="col-lg-offset-3 col-lg-6">
      <%= form_for @word, url: admin_category_words_path do |f| %>
        <div class="col-lg-12 padding-zero">
          <%= render "shared/error_messages", object: f.object %>
          <%= f.label :content %>
          <%= f.text_field :content, class: "form-control" %>
          <%= f.label :sound %>
          <%= f.text_field :sound, class: "form-control" %>
        </div>

        <div class="col-lg-12 padding-zero">
          <%= f.fields_for :answers do |ff| %>
            <div class="col-lg-12 padding-zero margin-top-20 ">
              <%= "#{t "admin.words.answer"} #{increase_one ff
                .options[:child_index]}" %>
            </div>
            <div class="col-lg-12 padding-zero">
              <%= ff.label :content %>
            </div>
            <div class="col-lg-12 padding-zero">
              <div class="col-lg-10 padding-zero">
                <%= ff.text_field :content, class: "form-control" %>
              </div>
              <div class="col-lg-2 padding-zero">
                <%= ff.label "is_correct_true", "correct" %>
                <%= ff.radio_button :is_correct, true,
                  checked: false, class: "answers" %>
              </div>
            </div>
          <% end %>
        </div>
        <div class="col-lg-12 text-center margin-top-20">
          <%= f.submit t("admin.words.submit"), class: "btn btn-default" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
