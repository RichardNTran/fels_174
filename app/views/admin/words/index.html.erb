<%= provide :title, t("admin.words.title") %>
<%= content_for :view_specific_css do  %>
  <%= stylesheet_link_tag "application", "static_page" %>
<% end %>
<div class="row">
  <div class="col-lg-12 padding-top-20">
    <%= link_to t("admin.words.new"), new_admin_category_word_path,
      class: "btn btn-default box-shadow" %>
  </div>
  <div class="col-lg-12">
    <h4 class="text-center"><%= @category.name %></h4>
  </div>
  <div class="col-lg-12">
    <table data-toggle="table"
        data-search="true"
        data-pagination="true"
        data-page-size=10
        data-page-list="[10,20,All]"
        data-height="500 "
    >
      <thead>
        <tr>
          <th><%= t "admin.words.index.stt" %></th>
          <th><%= t "admin.words.index.japanese" %></th>
          <th><%= t "admin.words.index.vietnamese" %></th>
          <th><%= t "admin.words.index.edit" %></th>
          <th><%= t "admin.words.index.delete" %></th>
        </tr>
      </thead>
      <tbody>
        <% @words.each_with_index do |word, index| %>
          <tr>
            <td><%= increase_one index %></td>
            <td><%= word.content %></td>
            <td><%= word.answers.correct.first.content %></td>
            <td>
              <%= link_to edit_admin_category_word_path(@category.id,
                word), class: "font-size-20" do %>
                <span class="glyphicon glyphicon-edit"></span>
              <% end %>
            </td>
            <td>
              <%= link_to admin_category_word_path(@category.id ,word),
                method: :delete,  data: {confirm:
                  t("admin.words.index.confirm_delete")},
                 class: "font-size-20" do %>
                <span class="glyphicon glyphicon-trash"></span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
