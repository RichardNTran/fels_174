<header class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <%= link_to image_tag("framgiaicon.png", id: "logo-icon") + t("header.logo"),
    root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right" id="menu-top">
        <li><%= link_to t("header.home"), root_url %></li>
        <% if !logged_in? %>
        <li><%= link_to t("header.signup"), signup_path %></li>
        <li><a id="show-form-login"><%= t "header.signin"  %> </a>
          <div class="col-lg-12" id="form-login">
            <div class="col-lg-12">
              <h6 class="color-red" id="message-err"></h6>
            </div>
            <div class="col-lg-12">
              <input type="text" class="form-control" id="email" placeholder="<%= t "header.placeholder.email" %>">
            </div>
            <div class="col-lg-12">
              <input type="password" class="form-control" id="password" placeholder="<%= t "header.placeholder.pass"  %>">
            </div>
            <div class="col-lg-12">
              <input type="checkbox" id="remember"><h6><%= t "header.remember"  %></h6>
            </div>
            <div class="col-lg-12">
              <input type="button" value=<%= t "header.login"  %> class="btn btn-primary max-width" id="btnLogin">
            </div>
          </div>
        </li>
        <% else %>
        <li>
          <a href="">
            <%= current_user.name  %> <b class="caret"></b>
          </a>
          <ul class="menu-dropdown">
            <li><%= link_to t("header.signout"), logout_path, method: "delete"  %></li>
          </ul>
        </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
